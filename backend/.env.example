# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update values

# Server Configuration
PORT=5000
NODE_ENV=development  # development | production | test

# ===========================================
# DATABASE
# ===========================================
# MongoDB Connection (use MongoDB Atlas for production)
MONGODB_URI=mongodb://localhost:27017/project-management
# For production, use: mongodb+srv://username:password@cluster.mongodb.net/dbname

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT Configuration
JWT_SECRET=generate-a-strong-secret-key-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=another-strong-secret-for-refresh-tokens
JWT_REFRESH_EXPIRE=30d

# Session Secret
SESSION_SECRET=your-session-secret-min-32-chars

# ===========================================
# GITHUB OAUTH
# ===========================================
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ===========================================
# CORS & URLS
# ===========================================
FRONTEND_URL=http://localhost:3000
# For production: https://your-domain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug  # error | warn | info | debug
LOG_FORMAT=dev   # dev | combined | common | short | tiny

# ===========================================
# FILE UPLOADS
# ===========================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# ===========================================
# EMAIL (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@projecthub.com

# ===========================================
# REDIS (optional - for caching/sessions)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# SECURITY
# ===========================================
BCRYPT_ROUNDS=12
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_SAME_SITE=lax  # strict | lax | none
